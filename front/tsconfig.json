{
    "compilerOptions": {
      "typeRoots" : ["node_modules/@types", "src/types"],
      "outDir": "./dist",
      "target": "es6",
      "module": "es6",
      "allowJs": true,
      "jsx": "react",
      "noImplicitAny": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "moduleResolution": "node",
      "esModuleInterop": true
    }
  }